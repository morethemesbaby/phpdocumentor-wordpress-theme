{% set counter = 0 %}

{% for element in project.indexes.elements if element.deprecated %}
	{% if file.allerrors | length > 0 %}
		{% set counter = counter + element.tags.deprecated.count %}

		{% set tagListTags %}
		{% for tag in element.tags.deprecated %}
			{% set tag = { klass: 'tag', items: [element.name, element.line, element.description] } %}
			{% include 'parts/docblock/tag/docblock-tag.html.twig' %}
		{% endfor %}
		{% endset %}

		{% set header = { klass: 'header', items: ['Type', 'Line', 'Description'] } %}
		{% set tagList = { tags: header, tagsHTML: tagListTags } %}
		{% set node = { name: file.path, tagLists: [tagList] } %}
		{% set docBlock = { klass: "Deprecated", node: node } %}
		{% include 'parts/structural-element/file.html.twig' %}
	{% endif %}
{% endfor %}

{% if counter == 0 %}
	<span class="text">
		There are no {{ transformationName | lower }} :)
	</span>
{% endif %}
